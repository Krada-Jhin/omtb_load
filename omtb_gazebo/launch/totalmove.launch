<launch>
<!-- Arguments -->
  <arg name="model" default="waffle" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration, cartographer_vlp16]"/>
  <arg name="configuration_basename" default="omtb_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>
  <arg name="use_robot_name1" default="robot1"/>
  
  <include file="$(find omtb_gazebo)/launch/1tb_room1.launch">
  </include>
  
  <include file="$(find omtb_slam2d)/launch/gmapping.launch">
     <arg name="model" value="$(arg model)"/>
      <arg name="use_robot_name" value="$(arg use_robot_name1)"/>
  </include>
    <include file="$(find omtb_control)/launch/automove_1tb_room1.launch">
  </include>
     <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find omtb_slam2d)/rviz/omtb_$(arg slam_methods).rviz"/>
  </group>
  
 
  
</launch>
